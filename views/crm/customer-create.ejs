<%- include("../partials/header.ejs", {title: title}); %>
<div class="bg"></div>
<div class="bg bg2"></div>
<div class="bg bg3"></div>
<div class="content">
    <h1>Customer</h1>
    <form class="label-left" method="post" action="/crm/customer/create">
        <fieldset>
            <legend>Create customer</legend>

            <label for="name">name</label>
            <input id="name" type="text" name="name" readonly />

            <label for="surname">surname</label>
            <input id="surname" type="text" name="surname" />

            <label for="email">email</label>
            <input id="email" type="text" name="email" />

            <label for="birthdate">birthdate</label>
            <input id="birthdate" type="text" name="birthdate" />

            <input
                class="link"
                type="submit"
                name="doit"
                value="Create customer"
            />
        </fieldset>
    </form>
    <a href="/crm/customers" class="link">Go back</a>
</div>

<%- include("../partials/footer.ejs"); %>
